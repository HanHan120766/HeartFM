/**index.wxss**/
.container {
  overflow: hidden;
}
.diantai_scroll {
	width: 100%;
	background-color: #fff;
}
.slideI_0 {
  height: 375rpx;
  width: 100%;
}
.slideI_0 .slide-image {
    width: 100%;
    height: 100%;
}

.category {
	background-color: #fff;
	width: 680rpx;
	padding: 0 35rpx 30rpx 35rpx;
  overflow: hidden;
}

.category_cell {
	padding-top: 25rpx;
	width: 170rpx;
	height: 135rpx;
	float: left;
}

.category_cell_image {
	width: 90rpx;
	height: 90rpx;
	display: block;
	margin: auto;
}

.category_cell_text {
	margin: 15rpx 0 0 0;
	display: block;
	font-size: 20rpx;
	width: 170rpx;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
	color: #999;
}
.hotfm {
	margin-top: 20rpx;
	background-color: #fff;
	width: 100%;
}
.title {
	width: 100%;
	height: 70rpx;
}
.title_left {
	float: left;
	background-color: #f0626e;
	width: 10rpx;
	height: 70rpx;
}
.title_name {
	font-size: 30rpx;
	line-height: 70rpx;
	color: #555;
	padding-left: 30rpx;
	font-weight: bolder;
}
.scroll_hotfm {
	display: flex;
	height: 290rpx;
	width: 750rpx;
    padding: 10rpx 0 20rpx 0;
    background: #fff;
}
.scroll_cell {
	width: 220rpx;
	margin-left: 20rpx;
	float: left;
}
.scroll_cell_img {
	width: 220rpx;
	height: 220rpx;
	display: block;
}
.scroll_text {
	display: block;
	padding-top: 15rpx;
	color: #454545;
	font-size: 25rpx;
	width: 220rpx;
	line-height: 30rpx;
}
.newlesson {
	margin-top: 20rpx;
	background-color: #fff;
	width: 100%;
}
.newlesson_list {
	padding-top: 30rpx;
	width: 100%;
	border-bottom: 1rpx #f5f5f5 solid;
}
.list_cell {
	height: 118rpx;
	width: 720;
	padding-left: 30rpx;
}
.cell_img {
	width: 88rpx;
	height: 88rpx;
	float: left;
}
.cell_text {
	width: 580rpx;
	height: 88rpx;
	float: left;
	margin-left: 22rpx;
}
.text_title {
	font-size: 28rpx;
	color: #555;
}
.text_speak {
	font-size: 25rpx;
	color: #999;
}
.moreInfo {
	height: 90rpx;
	width: 100%;
	font-size: 25rpx;
	color: #565656;
	text-align: center;
	display: -webkit-box;
	-webkit-box-align: center;
	-webkit-box-pack: center;

}
.rightjiantou {
	width: 25rpx;
	height: 25rpx;
	margin-left: 3rpx
}
.diantai {
	margin: 20rpx 0;
	background-color: #fff;
	width: 100%;
}
.scroll_diantai {
	margin-top: 20rpx;
	height: 230rpx;
	width: 100%;
	border-bottom: 1rpx #f5f5f5 solid;
}
.diantai_cell {
	width: 150rpx;
	height: 230rpx;
	padding-left: 30rpx;
	float: left;
}
.diantai_cell_img {
	width: 150rpx;
	height: 150rpx;
	border-radius: 75rpx;
}
.diantai_text {
	display: block;
	color: #373737;
	font-size: 23rpx;
	width: 150rpx;
	text-align: center;
	padding-top: 10rpx;
}
