/**index.wxss**/
.container {
  overflow: hidden;
  margin-bottom: 100rpx;
}
.slideI_0 {
  height: 300rpx;
  width: 100%;
}
.slideI_0 .slide-image {
    width: 100%;
    height: 100%;
}

.title {
	width: 100%;
	height: 70rpx;
}
.title_left {
	float: left;
	background-color: #f0626e;
	width: 10rpx;
	height: 70rpx;
}
.title_name {
	font-size: 30rpx;
	line-height: 70rpx;
	color: #555;
	padding-left: 30rpx;
	font-weight: bolder;
}

.moreInfo {
	height: 90rpx;
	width: 100%;
	font-size: 25rpx;
	color: #565656;
	text-align: center;
	display: -webkit-box;
	-webkit-box-align: center;
	-webkit-box-pack: center;
}
.rightjiantou {
	width: 25rpx;
	height: 25rpx;
	margin-left: 3rpx
}
.diantai {
	margin: 20rpx 0;
	background-color: #fff;
	width: 100%;
}
.scroll_diantai {
	margin-top: 20rpx;
	height: 230rpx;
	width: 100%;
	border-bottom: 1rpx #f5f5f5 solid;
}
.diantai_cell {
	width: 150rpx;
	height: 230rpx;
	padding-left: 30rpx;
	float: left;
}
.diantai_cell_img {
	width: 150rpx;
	height: 150rpx;
	border-radius: 75rpx;
}
.diantai_text {
	display: block;
	color: #373737;
	font-size: 23rpx;
	width: 150rpx;
	text-align: center;
	padding-top: 10rpx;
}
.hotZhubo {
  width: 100%;
  background-color: #fff;
}
.hotZhubo_list {
  margin: 0rpx 30rpx;
  border-bottom: 1px #e9e9e9 solid;
  height: 180rpx;
}
.zhubo_img {
  float: left;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}
.zhubo_name {
  float: left;
  padding-left: 30rpx;
  padding-top: 30rpx;
  color: #333;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  line-height: 40rpx;
  width: 400rpx;
}
.zhubo_diantaiNum {
  float: right;
  padding-top: 30rpx;
  color: #666;
  font-size: 24rpx;
  font-family: PingFangSC-Light;
}
.zhubo_content {
  float: left;
  padding-left: 30rpx;
  padding-top: 10rpx;
  color: #999;
  font-size: 28rpx;
  font-family: PingFangSC-Light;
  line-height: 40rpx;
  width: 560rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}












